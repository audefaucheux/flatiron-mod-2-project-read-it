<h1 class="m-3 small-caps">Sign up</h1>
  
<div class="container mt-3 ml-0">
    <%= form_for @user, html: {:class =>"form-group"} do |f| %>
        <div class="row">
            <div class="form-group col-4">
                <%= f.label :username %>
                <%= f.text_field :username, :class =>"form-control mb-4" %>
                <%= f.label :email_address %>
                <%= f.text_field :email_address, :class =>"form-control mb-4" %>
                <%= f.label :password %>
                <%= f.password_field :password, :class =>"form-control mb-2" %>
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, :class =>"form-control mb-4" %>
                <%= f.submit :"Create User", :class => "btn btn-primary mt-3" %>
                <%= link_to "Back", login_path, :class => "btn btn-primary mt-3"  %>
            </div>
        </div>
    <% end %>
</div>